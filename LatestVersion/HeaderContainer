<script>
$(function () {
    // Initialize SiteSearch for desktop
    var desktopSiteSearch = new TeamDynamix.SiteSearch({
        searchUrl: "/SBTDClient/2421/ITS-Portal/Shared/Search",
        enableAutocompleteSearch: true,
        autocompleteSearchUrl: '/SBTDClient/2421/ITS-Portal/Shared/AutocompleteSearch',
        autocompleteResultsPosition: 'absolute',
        autocompleteResultsZIndex: 90,
        searchTextBoxSelector: '#SiteSearch-text-4063fb83634d41be9d18cca8115403c1',
        searchComponentFilterButtonSelector: '#SiteSearch-filter-4063fb83634d41be9d18cca8115403c1',
        searchButtonSelector: '#SiteSearch-button-4063fb83634d41be9d18cca8115403c1',
        searchFilterDropdownSelector: '#SiteSearch-dropdown-4063fb83634d41be9d18cca8115403c1',
        showKnowledgeBaseOption: true,
        showServicesOption: true,
        showForumsOption: true,
        autoFocusSearch: false
    });

    // Initialize SiteSearch for mobile
    var mobileSiteSearch = new TeamDynamix.SiteSearch({
        searchUrl: "/SBTDClient/2421/ITS-Portal/Shared/Search",
        enableAutocompleteSearch: true,
        autocompleteSearchUrl: '/SBTDClient/2421/ITS-Portal/Shared/AutocompleteSearch',
        autocompleteResultsPosition: 'absolute',
        autocompleteResultsZIndex: 90,
        searchTextBoxSelector: '#SiteSearch-text-5f205e78393b4c359930df60331353e8', // Mobile text box selector
        searchComponentFilterButtonSelector: '#SiteSearch-filter-5f205e78393b4c359930df60331353e8', // Mobile filter button
        searchButtonSelector: '#SiteSearch-button-5f205e78393b4c359930df60331353e8', // Mobile search button
        searchFilterDropdownSelector: '#SiteSearch-dropdown-5f205e78393b4c359930df60331353e8', // Mobile dropdown
        showKnowledgeBaseOption: true,
        showServicesOption: true,
        showForumsOption: true,
        autoFocusSearch: false
    });
});

// Function to dynamically update the search bar placeholder
function setupSearchPlaceholder(dropdownId, textBoxId) {
  document.querySelector(`#${dropdownId}`).addEventListener('click', function (event) {
    const clickedItem = event.target.closest('a[data-component-text]');
    if (clickedItem) {
      const newPlaceholder = clickedItem.getAttribute('data-component-text');
      document.querySelector(`#${textBoxId}`).setAttribute('placeholder', `Search ${newPlaceholder}`);
    }
  });
}

// Apply the functionality to desktop
setupSearchPlaceholder('SiteSearch-dropdown-4063fb83634d41be9d18cca8115403c1', 'SiteSearch-text-4063fb83634d41be9d18cca8115403c1');

// Apply the functionality to mobile
setupSearchPlaceholder('SiteSearch-dropdown-5f205e78393b4c359930df60331353e8', 'SiteSearch-text-5f205e78393b4c359930df60331353e8');

